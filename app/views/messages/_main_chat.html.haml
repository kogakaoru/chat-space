.main-chat__group--info
  .main-chat__group--info--ingredients
    .main-chat__group--info--ingredients--leftbox 
      -# test
      = @group.name
      .main-chat__group--info--ingredients--leftbox--member
        Member : 
        - @group.users.each do |user|
          =user.name
    .main-chat__group--info--ingredients--Edit
      = link_to edit_group_path(@group) ,class:'main-chat__group--info--ingredients--Edit--btn' do
        Edit
