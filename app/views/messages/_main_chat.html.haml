.main-chat__message--form
  .main-chat__message--form--input
    .main-chat__message--form--input--text
      = form_for [@group, @message] do |f|
        = f.text_field :content, class: 'main-chat__message--form--input--text', placeholder: 'type a message'
        .main-chat__message--form--input--picture
          = f.label :image, class: 'input-picture' do
            = icon('fas', 'image')
            = f.file_field :image, style: "display:none;"
    
        = f.submit 'Send', class: 'main-chat__message--form--send-btn', style: "display:block;"